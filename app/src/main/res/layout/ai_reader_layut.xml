<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_dialog_fragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:srcCompat="@drawable/sheet_pin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/dismisContainer"
            android:layout_width="56dp"
            android:layout_height="62dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_dropdown" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/dismisContainer"
            android:fontFamily="@font/google_sans_bold"
            android:text="Results"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/dismisContainer"
            android:background="?android:attr/listDivider" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/rtext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:text="Recognised Text"
                    android:textAppearance="@style/TextAppearance_Toolbar" />

                <EditText
                    android:id="@+id/recognisedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/ic_rounded_bg"
                    android:editable="false"
                    android:ems="10"
                    android:fontFamily="@font/google_sans"
                    android:inputType="textLongMessage|textMultiLine"
                    android:padding="12dp"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scanb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:text="Scanned barcode"
                    android:textAppearance="@style/TextAppearance_Toolbar" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    app:srcCompat="@drawable/ic_barcode" />

                <EditText
                    android:id="@+id/scannedBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="12dp"
                    android:background="@drawable/ic_rounded_bg"
                    android:editable="false"
                    android:ems="8"
                    android:fontFamily="@font/google_sans"
                    android:inputType="textLongMessage|textMultiLine|textNoSuggestions|text"
                    android:padding="6dp"
                    android:textAlignment="center"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="Emotions"
                    android:textAppearance="@style/TextAppearance_Toolbar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:text="Happiness"
                        android:textAppearance="@style/TextAppearance_Toolbar"
                        android:textColor="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/hpnsprcs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:text="40%"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance_Toolbar"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/happiness"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:max="100"
                    android:progress="40"
                    android:progressDrawable="@drawable/progress_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:text="Sadness"
                        android:textAppearance="@style/TextAppearance_Toolbar"
                        android:textColor="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/sdnprcs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:text="60%"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance_Toolbar"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/sadness"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/progress_background" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cnt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:text="Content"
                    android:textAppearance="@style/TextAppearance_Toolbar" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/labelChart"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                </com.github.mikephil.charting.charts.PieChart>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>